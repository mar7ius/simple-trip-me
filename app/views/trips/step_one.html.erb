<%= @trip.destination.capitalize %>

<%= simple_form_for @trip, url: flight_choice_trip_path(@trip), method: :post do |f| %>
  <div class="card-container">
    <%= f.association :trip_flights, as: :check_boxes, collection: Flight.all, label_method: lambda { |flight| render("flight_infos", flight: flight)}, value_method: :id%>
    <%= f.submit class: 'btn btn-flat', label: "Choose your flight" %>
  </div>
<% end %>
