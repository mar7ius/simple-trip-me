<div class="card" style="width: 30vw;">
  <div style="position: relative;">
    <%= image_tag "image_#{activity.code_image}.png" %>
  </div>
  <div class="container py-1 card-activities">
  <h4 class=" text-center "><%= activity.name%></h4>
  <div class="card-content">
    <p class=" text-center "><%= activity.category %></p>
    <p><%= activity.description.truncate(50) %></p>
      <div class="d-flex justify-content-between w-100">

      <h5><i class="fas fa-dollar-sign"></i>  <%= activity.price %> $</h5>
      <h5><i class="far fa-clock pr-2"></i> <%= activity.duration%></h5>
      </div>
  </div>
  </div>
</div>
