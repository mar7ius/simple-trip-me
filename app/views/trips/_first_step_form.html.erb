<div class="first-step-form-wrapper">
  <div class="container-form p-4 vw-70">

    <%= simple_form_for trip do |f| %>

      <div class="counter">
        <i class="fas fa-user-friends nb-travelers mx-1"></i>
        <div class="counter-flex">
          <div class="counter-btn mx-1" id="minus">
            <i class="fas fa-minus minus-icn"></i>
          </div>
          <div class="number-div">
            <span id="number" class="mx-2"></span>
          </div>
          <div class="counter-btn mx-1" id="plus">
            <i class="fas fa-plus plus-icn"></i>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-between">
          <%= f.input :departure_flight, input_html: { class: 'select2'}, :as => :grouped_select, collection: Trip::CITIES_ORIGIN,
          :group_method => :first, :group_label_method => :last, selected: "", label: "From" %>

          <%= f.input :arrival_flight, input_html: { class: 'select2'}, :as => :grouped_select, collection: Trip::CITIES_DESTINATION,
          :group_method => :first, :group_label_method => :last, selected: "", label: "To" %>

          <%= f.input :start_date, as: :string, label: "Date of departure", placeholder: 'Departure date', required: false, input_html: {id: "range_start", class: "datepicker"},
          label: false %>
          <%= f.input :end_date, as: :string, label: "Return date", placeholder: 'Returning date', required: false, input_html: { id: "range_end", class: "datepicker"},
          label: false %>

      </div>
      <div class="d-flex justify-content-center">
      <%= f.submit "Start your trip", class: 'btn btn-koral btn-absolut' %>
      </div>
    <% end %>

  </div>
</div>
